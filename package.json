{
  "name": "@ramong26/xp-components",
  "private": false,
  "version": "1.0.5",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs.js"
    },
    "./styles": "./dist/index.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "react",
    "components",
    "ui",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ramong26/xp-components.git"
  },
  "homepage": "https://github.com/ramong26/xp-components",
  "bugs": {
    "url": "https://github.com/ramong26/xp-components/issues"
  },
  "author": "ramong23",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build:lib": "tsup src/index.ts --dts --format cjs,esm --out-dir dist --clean",
    "build": "pnpm build:lib",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "pack": "pnpm build:lib && npm pack",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20"
  },
  "devDependencies": {
    "@storybook/react-vite": "^9.1.8",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "esbuild-plugin-sass": "^1.0.1",
    "eslint": "^9.36.0",
    "sass": "^1.90.0",
    "storybook": "9.1.2",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1"
  }
}
